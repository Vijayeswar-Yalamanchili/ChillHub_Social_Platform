var d = new Date('2005-12-03T18:30:00.000Z');

var date = d.getDate();
var month = d.getMonth() + 1; // Since getMonth() returns month from 0-11 not 1-12
var year = d.getFullYear();
var newDate = date + "/" + month + "/" + year;

console.log("Formatted Date:", newDate)
// Formatted Date: 3/12/2005




const frds = await RegisterLoginModel.findOne({_id:req.params.id})
const newFrds = frds?.friends
// console.log(newFrds)
if(newFrds.length >= 1){
    console.log("array is present");
    const users = await RegisterLoginModel.find()
    // console.log(users)
    const myFriendsList = await Promise.all(
        newFrds.map((friendId) => {
            return RegisterLoginModel.findById(friendId).select("-password")
        })
    )
    // console.log("list : "+ newFrds)
        if(myFriendsList){
            const getusers = await Promise.all(
                users.filter((e)=> {
                    return e._id !== newFrds
                })
            )
            console.log("users :" + users)
        }
    // }
}else{
    const getusers = await RegisterLoginModel.find()
    // console.log(getusers)
    res.status(200).send({
        message : "users fetched",
